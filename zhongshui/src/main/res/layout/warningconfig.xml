<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@color/bg_action">
        <LinearLayout
            android:layout_width="105dip"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:id="@+id/layout_back"
            android:layout_marginLeft="5dip"
            android:background="@color/bg_action">
            <ImageView
                android:layout_gravity="right|center"
                android:layout_width="17dip"
                android:layout_height="25dip"
                android:paddingLeft="0dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back_normal"
                android:id="@+id/back"
                />
            <TextView
                android:layout_height="50dip"
                android:layout_width="75dip"
                android:textColor="@color/white"
                android:text="报警配置"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_height="50dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout_title"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/bg_action"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/title"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="1dip"
            android:layout_gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tx_out"
                android:layout_width="wrap_content"
                android:layout_height="27dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:textColor="@color/bg_action"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="外间"/>
            <TextView
                android:id="@+id/tx_in"
                android:layout_width="wrap_content"
                android:layout_height="27dip"
                android:background="@color/bg_action"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="里间"/>
        </LinearLayout>

        <View
            android:layout_height="50dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            />
        <TextView
            android:layout_height="match_parent"
            android:layout_width="80dip"
            android:paddingRight="10dip"
            android:text="恢复默认"
            android:id="@+id/tx_backto"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center|right"/>

    </LinearLayout>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:id="@+id/list"></ListView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:id="@+id/bt_backto"
        android:text="恢复默认配置"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="20dip"
        android:textColor="@color/white"
        android:background="@color/royalblue"
        android:textSize="23sp"
        android:visibility="gone"
        />

</LinearLayout>