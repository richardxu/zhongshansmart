<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dip"
    android:layout_height="wrap_content"
    android:id="@+id/layout_main"
    android:background="@color/transparent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="210dip"
            android:layout_height="wrap_content"
            android:background="@color/bg_action"
            android:id="@+id/pop_layout1"
            android:orientation="vertical">
    <!-- 	    <TextView
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:background="@drawable/poptx_bg"
                android:text="查看在线设备"
                android:gravity="center"
                android:padding="5dip"
                android:id="@+id/inquery"
                android:textColor="@color/white"
                android:textSize="19sp"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#55808080"
                /> -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/config"
                android:visibility="gone"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="23dip"
                    android:layout_height="23dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"

                    android:src="@drawable/ic_setting"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="端口配置"
                    android:gravity="center|left"
                    android:layout_marginBottom="0dip"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
            </LinearLayout>
             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#77808080"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/warning"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_warning1"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="报警配置"
                    android:gravity="center|left"
                    android:layout_marginBottom="0dip"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
            </LinearLayout>
             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#77808080"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/voice"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_voice"/>
                  <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="语音配置"
                    android:gravity="center|left"
                    android:layout_marginBottom="0dip"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
             </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#77808080"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/infraredlearn"
                android:visibility="gone"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_remotecontrol"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="红外学习"
                    android:gravity="center|left"
                    android:layout_marginBottom="0dip"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
            </LinearLayout>
             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#77808080"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/logout"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="22dip"
                    android:layout_height="24dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_logout"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="退出程序"
                    android:gravity="center|left"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:background="#77808080"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dip"
                android:orientation="horizontal"
                android:id="@+id/backto"
                android:visibility="gone"
                android:background="@drawable/poptx_bg">
                <ImageView
                    android:layout_width="21dip"
                    android:layout_height="23dip"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:src="@drawable/ic_backto"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:text="恢复默认配置"
                    android:gravity="center|left"
                    android:padding="5dip"

                    android:textColor="@color/white"
                    android:textSize="17sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
